
<div class ="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-lg-5 col-lg-offset-2 show-title">
      <div>
        <h1> <%= @couple.couple_nickname.upcase %> </h1>
        <p>&laquo;<%= @couple.about_couple %>&raquo;</p>
        <p><%= @couple.couple_city %></p>

      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-lg-3 text-center">
       <div class="fraise-ranking"><h2> 10</h2> <%= image_tag("fraise_rose_navbar.png") %></div>
       <div class="badges">
       <% @couple.badges.each do |badge| %>
         <%= cl_image_tag badge.icon.path, width: 70, height: 70, crop: :fill %>
       <% end %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-12 col-sm-8 col-lg-5 col-lg-offset-2">
      <div id="carousel" class="carousel slide shadow-right" data-ride="carousel" >
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @couple.photos.each_index do |index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% @couple.photos.each_with_index do |photo, index| %>
            <% if index == 0 %>
              <div class="item active">
              <% else %>
              <div class="item">
            <% end %>

            <%= cl_image_tag(photo.path, width: 500, height: 280, crop: :fill)  %>
            </div>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
     </div>
    <div class="col-xs-12 col-sm-4 col-lg-3 text-center">
      <div class="remove-bootstrap-padding">
       <div class="flex-home-item-top">
          <h5> <%= " #{@couple.member1_name.upcase}, #{@couple.age_member_1}" %></h5>
          <p>&laquo;<%= @couple.about_member1 %>&raquo;</p>
        </div>
        <div class="flex-home-item-bottom">
          <h5><%= "#{@couple.member2_name.upcase}, #{@couple.age_member_2}"  %></h5>
          <p>&laquo;<%= @couple.about_member2 %>&raquo;</p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
    <div class ="container-line">
      <div class="left"><%= link_to "EDITER VOTRE PROFIL", my_profile_path, method: :get , class:"p1"%></div>
      <div class="center"><%= link_to "PROPOSER UN EVENT", new_organiser_event_path, method: :get, class:"p2" %></div>
      <div class="right"><%= link_to "AUTOUR DE NOUS", events_path, method: :get , class:"p1" %></div>
    </div>
  </div>
</div>
