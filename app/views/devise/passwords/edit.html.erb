<div class="background-form">

  <div class="form-container">

    <div class="form-title">
      <h3>CHANGEZ VOTRE MOT DE PASSE</h3>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs form-text">
        <%= f.input :password, label: "VOTRE NOUVEAU MOT DE PASSE", required: true, placeholder: 'Six caractères minimum',input_html: {:class => "form-inputs-background"} %>
        <%= f.input :password_confirmation, label: "REDONNEZ-NOUS VOTRE NOUVEAU MOT DE PASSE", required: true, placeholder: 'six caractères minimum',input_html: {:class => "form-inputs-background"} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "CHANGEZ VOTRE MOT DE PASSE" %>
      </div>
    <% end %>

    <div class="form-footer text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>

</div>
