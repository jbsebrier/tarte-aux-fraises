<div class="background-form">

  <div class="form-container">

    <div class="form-title">
      <h3>DE RETOUR PARMI NOUS ?</h3>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-text">
        <%= f.input :email, label: "VOTRE ADRESSE MAIL", required: true, placeholder: 'tarte@auxfraises.com', autofocus: true,  input_html: {:class => "form-inputs-background"} %>
        <%= f.input :password, label: "VOTRE MOT DE PASSE", required: true, placeholder: 'six caractÃ¨res minimum',input_html: {:class => "form-inputs-background"} %>
        <%= f.input :remember_me, label: "SE SOUVENIR DE VOUS", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <br>
      <div class="form-actions form-btn-margin">
        <%= f.button :submit, "CONNECTEZ-VOUS" %>
      </div>
       <br>
    <% end %>

    <div class="form-footer text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>

</div>
